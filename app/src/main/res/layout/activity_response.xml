<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x16"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/y16"
                android:gravity="center"
                android:text="完整链接的GET请求" />

            <Button
                android:id="@+id/response_get1_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y88"
                android:background="#ffffff"
                android:text="点击复制" />

            <TextView
                android:id="@+id/response_get1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y16"
                android:text="连接服务器失败"
                android:textColor="#000000"
                android:textSize="@dimen/x32" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/gray"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/y16"
                android:gravity="center"
                android:text="拼接链接的GET请求" />

            <Button
                android:id="@+id/response_get2_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y88"
                android:background="#ffffff"
                android:text="点击复制" />

            <TextView
                android:id="@+id/response_get2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y16"
                android:text="连接服务器失败"
                android:textColor="#000000"
                android:textSize="@dimen/x32" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/gray"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/y16"
                android:gravity="center"
                android:text="完整链接的POST请求" />

            <Button
                android:id="@+id/response_post1_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y88"
                android:background="#ffffff"
                android:text="点击复制" />

            <TextView
                android:id="@+id/response_post1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y16"
                android:text="连接服务器失败"
                android:textColor="#000000"
                android:textSize="@dimen/x32" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/gray"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/y16"
                android:gravity="center"
                android:text="拼接链接的POST请求" />

            <Button
                android:id="@+id/response_post2_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y88"
                android:background="#ffffff"
                android:text="点击复制" />

            <TextView
                android:id="@+id/response_post2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y16"
                android:text="连接服务器失败"
                android:textColor="#000000"
                android:textSize="@dimen/x32" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>